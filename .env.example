# Google API Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_GENAI_USE_VERTEXAI=FALSE

# IntelliSurf AI - RFP Research Platform Configuration

# ================================
# LOCAL DEVELOPMENT SETTINGS
# ================================
# For local development, use these settings:

# Google AI API (Required)
GOOGLE_API_KEY=your-gemini-api-key

# Local API Configuration
BACKEND_URL=http://localhost:8080
FRONTEND_PORT=8501
BACKEND_PORT=8080

# Local Storage (No cloud required)
USE_GCS_FOR_UPLOADS=false
USE_CLOUD_STORAGE=false
USE_FIRESTORE_EMULATOR=true
FIRESTORE_EMULATOR_HOST=localhost:8080

# ================================
# PRODUCTION CLOUD SETTINGS
# ================================
# For production with Google Cloud, use these settings:

# Google Cloud Project (Uses Application Default Credentials)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=your-project-id-intellisurf-storage
USE_GCS_FOR_UPLOADS=true
USE_CLOUD_STORAGE=true

# Firestore Production
FIRESTORE_DATABASE_ID=(default)
USE_FIRESTORE_EMULATOR=false

# Production API URLs
BACKEND_URL=https://your-domain.com

# ================================
# COMMON SETTINGS
# ================================

# AI Configuration
MAX_TOKENS=8192
TEMPERATURE=0.7

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=./uploads

# Performance Settings
CONTENT_SIZE_THRESHOLD=500000
CLEANUP_OLD_CONTENT_DAYS=30

# Session Management
ADK_SESSION_TIMEOUT=7200
CONVERSATION_TIMEOUT=86400
